<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logInFragment">
    <fragment
        android:id="@+id/signInFragment"
        tools:layout="@layout/fragment_sign_in"
        android:name="com.example.forusuistudy.SignInFragment"
        android:label="SignInFragment">
        <argument
            android:name="isLoginSuccess"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_signInFragment_to_findPwFragment"
            app:destination="@id/findPwFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.forusuistudy.LogInFragment"
        tools:layout="@layout/fragment_log_in"
        android:label="LogInFragment">
        <action
            android:id="@+id/action_logInFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/findPwFragment"
        android:name="com.example.forusuistudy.FindPwFragment"
        android:label="FindPwFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.forusuistudy.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
</navigation>