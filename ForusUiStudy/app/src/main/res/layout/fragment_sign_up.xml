<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/top_navi"
            android:id="@+id/top_navi"/>

        <EditText
            android:id="@+id/et_signUp_emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:background="@drawable/bg_round_et"
            android:hint="아이디"
            style="@style/btnStyle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_signUp_emailWarn"
            android:text="이메일 형식이 맞지 않습니다."
            style="@style/warnTextStyle"
            />

        <EditText
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_singIn_pwdInput"
            android:background="@drawable/bg_round_et"
            android:hint="비밀번호"
            style="@style/btnStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_signUp_pwdWarn"
            android:text="비밀번호는 6자리 이상의 영문, 숫자 특수문자 조합을 사용해주세요"
            style="@style/warnTextStyle"
            />


        <Button
            android:layout_marginTop="36dp"
            android:id="@+id/btn_signUp_next"
            style="@style/btnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/bg_round_et"
            android:text="확인"
            app:backgroundTint="@color/mainColor" />
    </LinearLayout>


</layout>